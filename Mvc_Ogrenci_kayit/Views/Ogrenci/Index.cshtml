@model IEnumerable<Mvc_Ogrenci_kayit.Models.TBL_Ogrenci>

@{
    ViewBag.Title = "Index";
}
<div class="row">
    <div class="col-md-9">
        <h2>Öğrenci Listesi</h2>
    </div>
    <div class="col-md-3 text-right">
        <a href="/ogrenci/create" class="btn btn-primary" style="margin-top:10px">Yeni Oğrenci Kaydı</a>
    </div>
</div>



<table class="table table-sm table-striped">
    <tr>
        <th style="width:20%">
            Adı
        </th>
        <th style="width:20%">
            Soyadı
        </th>
        <th style="width:20%">
            Mail
        </th>
        <th style="width:10%">
           Adres
        </th>
        <th style="width:10%">
            Foto
        </th>
        <th style="width:20%"></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.OgrAd
        </td>
        <td>
            @item.OgrSoyad
        </td>
        <td>
            @item.OgrMail
        </td>
        <td>
            @item.OgrAdres
        </td>
        <td>
            <img src="@item.OgrFotograf" width="50px height="50px" />
            
        </td>
        <td>
            <div class="row">
                <div class="col-md-4">
                    <a href="/ogrenci/Edit/@item.OgrId" class="btn btn-warning btn-sm">Update</a> 
                </div>
                <div class="col-md-4">
                    <a href="/ogrenci/Details/@item.OgrId" class="btn btn-success btn-sm">Detail</a>
                </div>
                <div class="col-md-4">
                    <a href="/ogrenci/Delete/@item.OgrId" class="btn btn-danger btn-sm">Delete</a>
                </div>
            </div>
           
        </td>
    </tr>
}

</table>
